@import 'variables'
@import 'animation'

body
  background-color backgroundcolor

#facebook
  max-height 100%

.content
  animation fadein 1.5s

.fadein
  animation fadein 2s

.fadeinout
  animation-fill-mode forwards
  -webkit-animation-fill-mode forwards
  animation fadeinout 4s

.fixed-height
  height 250px !important

.navbar-center
  position absolute
  margin-right -50%
  left 50%
  transform translate(-50%,0)
  -ms-transform translate(-50%,0)
  -webkit-transform translate(-50%,0) 

.example-appear
  opacity 0.01

.example-appear.example-appear-active
  opacity 1
  transition: opacity .5s ease-in

#map-havainnot
  height 500px

.modal-img
  max-height 50%

.img-havainto
  max-height 100px

.darkened
  z-index 1000
  opacity 0.3 !important

#kadonneet-search-map
  width 100% 
  height 500px 

.grayable
  opacity 0.2

.search-modal
  width 100%

.opened
  //left 50%
  //top 50%
  //transform translate(-50%, -50%)
  position absolute  
  z-index 9999
  width: 50%
  height: 50%
  overflow: auto
  margin: auto
  top 0
  left 0
  bottom 0 
  right 0